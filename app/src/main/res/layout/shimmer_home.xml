        android:id="@+id/cvPostName6"
        android:layout_width="170dp"
        android:layout_height="29dp"
        android:background="@color/shimmer_placeholder"
        android:layout_marginTop="@dimen/margin_8"
        app:layout_constraintStart_toEndOf="@id/cvPost6"
        app:layout_constraintEnd_toEndOf="@+id/cvPost6"
        app:layout_constraintStart_toStartOf="@+id/cvPost6"
        app:layout_constraintTop_toBottomOf="@+id/cvPost6"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.MediumComponent.Rectangle"/>

