        android:layout_marginTop="@dimen/margin_8"
        app:layout_constraintStart_toEndOf="@id/cvPost1"
        app:layout_constraintEnd_toEndOf="@+id/cvPost2"
        app:layout_constraintStart_toStartOf="@+id/cvPost2"
        app:layout_constraintTop_toBottomOf="@+id/cvPost2"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.MediumComponent.Rectangle"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cvPost3"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginHorizontal="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_24"
        android:background="@color/shimmer_placeholder"
