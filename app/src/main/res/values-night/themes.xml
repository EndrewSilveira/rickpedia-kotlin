<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rickpedia" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/white_variant</item>
        <item name="colorOnPrimarySurface">@color/black_variant2</item>

        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnBackground">@color/light_gray</item>
        <item name="colorBackgroundFloating">@color/full_white</item>

        <item name="colorAccent">@color/green_variant</item>

        <item name="colorSecondary">@color/cian</item>
        <item name="colorSecondaryVariant">@color/rick_cian</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
    </style>
</resources>